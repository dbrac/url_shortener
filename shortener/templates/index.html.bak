{% load static %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Darrin's URL Shortener</title>
    <link rel="stylesheet" href="{% static "shortener/css/style.css" %}">
<!--    <link rel="stylesheet" href="css/forms.css">-->
    <link rel="stylesheet" href="{% static "shortener/css/fieldset.css" %}">
    <link rel="stylesheet" href="{% static "shortener/css/table.css" %}">
</head>

<body>
    <header>
        <div id="logo">Darrin's URL Shortener</div>
        <nav>
            <a href="">Search</a>
            <a href="">Login</a>
        </nav>
    </header>
    <div class="wrapper">
        <main>
            <form>
                <fieldset>
                    <label for="long_url">url</label>
                    <input type="text" id="long_url" name="long_url" required><br>
                    <label for="short_key">https://d.b/</label>
                    <input type="text" id="short_key" name="short_key" required><br>
                    <label for="tags">tags</label>
                    <input type="text" id="tags" name="tags" required><br>
                    <label for="keep_for">keep active for</label>
                    <select id="keep_for" name="keep_for" required>
                        <option value="1">1 month</option>
                        <option value="3">3 months</option>
                        <option value="6">6 months</option>
                        <option value="12">12 months</option>
                    </select><br>
                    <label class="checkbox-label" for="acknowledgment" id="acknowledge-text">
                        <input type="checkbox" id="acknowledgment" name="acknowledgment" required>
                        I acknowledge that s/ short URLs are only accessible within the internal
                        network and confirm that I will not embed short URLs in production applications.
                    </label>
                    <div><button type="submit" style="">Shorten it!</button></div>
                </fieldset>
            </form>
        </main>
    </div>
    <footer>&copy; For internal use only. Contains information that may not be disclosed externally.</footer>
</body>

</html>